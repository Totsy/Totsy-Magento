<script type="text/javascript">
    function changeAddress(type) {
        var $formInputs = jQuery('#'+type+'-fields :input');
        if( jQuery('select#'+type+'-address-select').val() == '' ) {
            $formInputs.each(function(i) {
                this.value = '';
                this.text = '';
            });
        } else {
            var params = {};
            params['addressId'] = jQuery('select#'+type+'-address-select').val();
            new Ajax.Request('<?php echo Mage::getModel('adminhtml/url')->getUrl('orderedit/order/getorderaddressinformations') ?>', {
                method: 'get',
                parameters: params,
                onSuccess: function(transport) {
                    var fields = transport.responseText.evalJSON();
                    $formInputs.each(function(i) {
                        if (this.name in fields) {
                            this.value = fields[this.name];
                            this.text = fields[this.name];
                        } else if (this.name == 'street1') {
                            this.value = fields['street'];
                        }
                    })
                }
            });
        }
     }
</script>
