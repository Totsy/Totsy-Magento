<?xml version="1.0"?>
<layout>
    <catalog_product_view>
        <reference name="after_body_start">
            <block type="core/template" name="sociable.product.pixel" template="pixels/sociable/product/ajax.phtml" />
        </reference>
    </catalog_product_view>

    <default>
        <reference name="after_body_start">
            <block type="core/template" name="sociable.header.pixel" template="pixels/sociable/header/ajax.phtml" />
            <block type="core/template" name="steelhouse.product.pixel" template="pixels/steelhouse/header/ajax.phtml" />
        </reference>
    </default>

    <customer_logged_out>
        <reference name="after_body_start">
            <remove name="sociable.header.pixel" />
            <remove name="steelhouse.product.pixel" />
        </reference>
    </customer_logged_out>

    <pixels_steelhouse_index>
        <block type="core/template" name="root" template="pixels/steelhouse/pixel.phtml" />
    </pixels_steelhouse_index>

    <pixels_sociable_product>
        <block type="core/template" name="root" template="pixels/sociable/product.phtml">
            <block type="core/template" name="sociable.footer.pixel" template="pixels/sociable/footer.phtml" />
        </block>
    </pixels_sociable_product>
    
    <pixels_sociable_feed>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>			
        </reference>
        <reference name="content">
            <block type="page/html" name="harapartners" template="pixels/sociable/feed/index.phtml" />
        </reference>
    </pixels_sociable_feed>

    <pixels_sociable_header>
        <block type="core/template" name="root" template="pixels/sociable/header.phtml">
            <block type="core/template" name="sociable.footer.pixel" template="pixels/sociable/footer.phtml" />
        </block>
    </pixels_sociable_header>
</layout>
