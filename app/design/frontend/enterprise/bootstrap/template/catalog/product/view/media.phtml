<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
    $_nativeZoom = false;
?>
<div class="well zoomImage">
<?php /* --------- Cloud Zoom --------- */ ?>
    <?php $big_img = $this->helper('catalog/image')->init($_product, 'image')->resize(370);?>
    <a class="cloud-zoom" id="zoom1" href="<?php echo $this->helper('catalog/image')->init($_product, 'image')->resize(1000) ?>" rel="showTitle: false, position:'inside'" >
    <?php
        $_img = '<img title="Optional title display" src="'.$this->helper('catalog/image')->init($_product, 'image')->resize(370).'" alt="'.$this->htmlEscape($_product->getImageLabel()).'"  />';
        echo $_helper->productAttribute($_product, $_img, 'image-thumb');
    ?></a>
<?php /* --------- Gallery Images using Cloud Zoom --------- */ ?>
</div>
<?php if (count($this->getGalleryImages()) > 0): ?>
<div class="more-views">
    <ul class="thumbnails">
    <?php foreach ($this->getGalleryImages() as $_image): ?>
        <li>
        <div class="thumbnail" style="padding:3px;">
            <a href="<?php echo $this->helper('catalog/image')->init($_product, 'image', $_image->getFile())->resize(1000);?>" class='cloud-zoom-gallery' title='<?php echo $this->htmlEscape($_image->getLabel()) ?>' rel="useZoom: 'zoom1', smallImage: '<?php echo $this->helper('catalog/image')->init($_product, 'image', $_image->getFile())->resize(370);; ?>' ">
            <img src="<?php echo $this->helper('catalog/image')->init($_product, 'thumbnail', $_image->getFile())->resize(75); ?>" alt = "<?php echo $this->htmlEscape($_image->getLabel()) ?>" width="75px" height="75px"/>
            </a>
        </div>
        </li>
        <?php endforeach; ?>
    </ul>
</div>
<?php endif; ?>