<?php
$profiles = Mage::getModel('sales/recurring_profile')->getCollection()
    ->addFieldToFilter('customer_id', Mage::registry('current_customer')->getId())
    ->addFieldToSelect('*')
    ->setOrder('profile_id', 'desc');


if($profiles) {
    foreach($profiles as $profile) {
        $profile_data = unserialize($profile->getOrderItemInfo());
        $product = Mage::getModel('catalog/product')->load($profile_data['product_id']);

        if($product->getIsClubSubscription() && $profile->getState() == 'active') {
            $next_billing_date = date('F dS, Y', strtotime(date("Y-m-d", strtotime($profile_data['updated_at'])) . " + 1 month"));

            break;
        }

    }
}

$customer = Mage::registry('current_customer');

?>

<table class="plus top-24">
    <tr>
        <td class="plus-label">Member Name: </td>
        <td class="plus-value"><input type="text" readonly="readonly" value="<?php echo $customer->getFirstname() . ' ' . $customer->getLastname();?>" /></td>
    </tr>
    <tr>
        <td class="plus-label">Totsy Plus Plan: </td>
        <td class="plus-value"><input type="text" readonly="readonly" value="<?php echo $product->getName();?> (<?php echo Mage::helper('core')->formatPrice($product->getPrice(), FALSE);?>)" /></td>
    </tr>
    <tr>
        <td class="plus-label">Next Billing Date: </td>
        <td class="plus-value">
            <input type="text" readonly="readonly" value="<?php echo $next_billing_date;?>" />
        </td>
    </tr>
    <tr>
        <td class="plus-label">&nbsp;</td>
        <td class="plus-value renewal-info"><div class="f12" id="renewal-info">Your TotsyPLUS subscription will renew automatically each month.<br/>For more information on TotsyPLUS, please see the<br/><a href="/plus/terms.html" class="dark underline">Terms and Conditions</a></div></td>
    </tr>
    <tr>
        <td class="plus-label">Automatic Renewal: </td>
        <td class="plus-value slider-box">
            <div class="slider-frame"><span class="slider-button"></span></div>
            <input type="checkbox" id="on-off" checked="check" onchange="javascript:toggleCheck();" />
        </td>
    </tr>
</table>

<script type="text/javascript">
    jQuery('.slider-button').toggle(function(){
        jQuery('.slider-button').animate({ marginLeft: "28px" }, 250);
        jQuery('.slider-frame').fadeTo('fast', 1, function(){
            jQuery(this).css('background-image', 'url(/skin/frontend/enterprise/bootstrap/images/plus/slider_off.png)');
        });
        jQuery('#renewal-info').css('display', 'none');
        jQuery('#on-off').removeAttr('checked', 'checked');
    },function(){
        jQuery('.slider-button').animate({ marginLeft: "0" }, 250);
        jQuery('.slider-frame').fadeTo('fast', 1, function(){
            jQuery(this).css('background-image', 'url(/skin/frontend/enterprise/bootstrap/images/plus/slider_on.png)');
        });
        jQuery('#renewal-info').css('display', 'block');
        jQuery('#on-off').attr('checked');
    });
    function toggleCheck() {
        jQuery(document).ready(function($) {
            $("#on-off").change(function() {
                $("#on-off").toggleClass("selected", this.checked);
            });
        });
    }
</script>