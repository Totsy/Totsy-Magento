<?xml version="1.0"?>
<config>
  <sections>
    <purchaseconfirm translate="label">
      <label>Purchase Confirmation</label>
      <tab>insparq</tab>
      <frontend_type>text</frontend_type>
      <sort_order>2000</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <settings translate="label">
          <label>Listener Settings</label>
          <frontend_type>text</frontend_type>
          <sort_order>100</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <comment>
            <![CDATA[
            <div style="padding:10px;background-color:#fff;border:1px solid #ddd;margin-bottom:7px;">
               This is a beta version of the INSPARQ Widget for Magento.
            </div>
            ]]>
          </comment>
          <fields>
            <enabled translate="label comment">
              <label>Enable Purchase Confirmation Listener</label>
              <comment><![CDATA[Allows purchases to be pushed to Insparq's Analytics.]]></comment>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_enabledisable</source_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </enabled>
          </fields>
        </settings>
      </groups>
    </purchaseconfirm>
  </sections>
</config>
