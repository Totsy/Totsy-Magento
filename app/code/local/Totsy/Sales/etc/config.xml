<config>
    <modules>
        <Totsy_Sales>
            <version>0.1.9</version>
        </Totsy_Sales>
    </modules>
    <global>
        <resources>
            <totsy_sales_setup>
                <setup>
                    <module>Totsy_Sales</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </totsy_sales_setup>
            <totsy_sales_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </totsy_sales_write>
            <totsy_sales_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </totsy_sales_read>
        </resources>
        <models>
            <sales>
                <rewrite>
                    <observer>Totsy_Sales_Model_Observer</observer>
                    <order>Totsy_Sales_Model_Order</order>
                    <order_invoice_total_subtotal>Totsy_Sales_Model_Order_Invoice_Total_Subtotal</order_invoice_total_subtotal>
                    <order_invoice>Totsy_Sales_Model_Order_Invoice</order_invoice>
                </rewrite>
            </sales>
        </models>
        <helpers>
            <sales>
                <rewrite>
                    <order>Totsy_Sales_Helper_Order</order>
                </rewrite>
            </sales>
        </helpers>
        <events>
            <sales_order_place_after>
                <observers>
                    <sales_observer>
                        <type>singleton</type>
                        <class>Totsy_Sales_Model_Observer</class>
                        <method>incrementCustomerPurchaseCount</method>
                    </sales_observer>
                </observers>
            </sales_order_place_after>
            <order_cancel_after>
                <observers>
                    <sales_observer>
                        <type>singleton</type>
                        <class>Totsy_Sales_Model_Observer</class>
                        <method>decrementCustomerPurchaseCount</method>
                    </sales_observer>
                </observers>
            </order_cancel_after>
        </events>
    </global>
</config>
